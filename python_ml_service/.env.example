# Environment Variables for Python ML Service

# Groq API Key for AI Vision Detection (Llama 3.2 Vision)
# Get your free API key at: https://console.groq.com/keys
GROQ_API_KEY=your_groq_api_key_here

# Application Settings
HOST=0.0.0.0
PORT=8001
DEBUG=false

# Model Configuration
MODEL_NAME=mobilenetv3_large_100
EMBEDDING_DIM=512
MODEL_PATH=./assets/pest_encoder.pth

# Device (cuda or cpu)
DEVICE=cpu

# CORS Origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:5000,http://127.0.0.1:5000,http://localhost:3000

# Image Processing
IMAGE_SIZE=224
MAX_IMAGE_SIZE_MB=10

# Training Settings (for train.py)
LEARNING_RATE=0.001
NUM_EPOCHS=50
SUPPORT_SIZE=5
QUERY_SIZE=10
